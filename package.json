{
  "name": "e-safepower-learning",
  "version": "2.1.0",
  "description": "Nền tảng học tập Nguồn điện an toàn và môi trường - DHsystem",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "author": "DHsystem",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.dhsystem.esafepower",
    "productName": "E-SafePower",
    "copyright": "Copyright © 2026 DHsystem",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "DHsystem"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "E-SafePower Learning"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ]
  }
}