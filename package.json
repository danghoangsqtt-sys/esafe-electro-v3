
{
  "name": "e-safepower-learning",
  "version": "2.1.0",
  "description": "Nền tảng học tập Nguồn điện an toàn và môi trường - DHsystem",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build && electron-builder --win --x64"
  },
  "author": "DHsystem",
  "license": "ISC",
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "@google/genai": "^1.30.0",
    "pdfjs-dist": "^4.0.379",
    "katex": "^0.16.9",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.dhsystem.esafepower",
    "productName": "E-SafePower",
    "copyright": "Copyright © 2026 DHsystem",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "DHsystem"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "E-SafePower Learning"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "version.json"
    ],
    "extraResources": [
      "build/icon.ico"
    ]
  }
}
